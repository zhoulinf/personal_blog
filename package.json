{
  "name": "person-blog",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@person_blog/web",
    "dev:server": "turbo run dev --filter=@person_blog/server-main",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "turbo": "^2.5.5",
    "typescript": "5.8.3",
    "validate-commit-msg": "^2.14.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22"
  }
}