{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "types": [
      "vue/jsx",
      "node",
    ],
    "paths": {
      "@/*": [
        "./packages/*",
      ]
    },
    "rootDirs": [
      "demo",
      "packages"
    ]
  },
  "files": [
    "vite.config.ts",
    "eslint.config.mts",
    "env.d.ts",
  ],
  "include": [
    "demo/**/*.ts",
    "demo/**/*.tsx",
    "demo/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.tsx",
  ]
}