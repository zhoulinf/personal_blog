{
  "name": "@person_blog/ui",
  "version": "1.0.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./es": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./es/*.mjs": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.mjs"
    },
    "./es/*": {
      "types": [
        "./dist/*.d.ts",
        "./dist/*/index.d.ts"
      ],
      "import": "./dist/*.mjs"
    },
    "./*": "./*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && pnpx rollup -c",
    "dev": "vite"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/lodash-es": "^4.17.12",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.0.1",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.34.0",
    "jiti": "^2.4.2",
    "postcss": "^8.4.0",
    "rollup": "^4.50.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "@person_blog/eslint-config": "workspace:^",
    "vue-tsc": "^3.0.4",
    "@vue/tsconfig": "^0.7.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "deepmerge": "^4.3.1",
    "fast-glob": "^3.3.3",
    "lodash-es": "^4.17.21",
    "tailwind-merge": "^3.3.1"
  }
}