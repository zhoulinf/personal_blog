{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "jsx": "preserve",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "emitDeclarationOnly": true,
        "types": [
            "vue/jsx",
            "jest"
        ],
        "declaration": true,
        "rootDir": "./packages",
        "outDir": "./dist",
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.d.ts",
        "packages/**/*.tsx",
    ]
}