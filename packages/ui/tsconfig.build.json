{
    "compilerOptions": {
        "composite": true,
        "target": "ES6",
        "jsx": "preserve",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "emitDeclarationOnly": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "types": [
            "vue/jsx",
            "jest",
            "node",
        ],
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "declaration": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "rootDir": "packages",
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "./packages/**/*"
    ],
}