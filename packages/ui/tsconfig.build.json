{
    "compilerOptions": {
        "composite": true,
        "target": "ES6",
        "jsx": "preserve",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "emitDeclarationOnly": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "types": [
            "vue/jsx",
        ],
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "declaration": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "rootDirs": [
            "packages",
        ],
        "tsBuildInfoFile": ".build/.tsbuildinfo"
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.tsx",
    ]
}