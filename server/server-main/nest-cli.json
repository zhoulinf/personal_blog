{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "sourceRoot": "src",
  "tsConfigPath": "tsconfig.build.json",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.yml",
        "outDir": "./dist/src"
      }
    ],
    "watchAssets": true
  }
}